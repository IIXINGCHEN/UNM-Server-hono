// package.json (Updated for Hono Refactoring)
{
  "name": "unm-server-hono", // Renamed slightly to indicate Hono version
  "version": "1.1.0", // Incrementing version for the new framework
  "description": "网易云解灰-API服务 (Hono Refactored)",
  "main": "dist/server.js", // Entry for local Node.js start
  // Vercel usually picks up the export from the file specified in vercel.json builds
  "type": "module", // Enabling ES Module syntax, Hono works well with this
  "scripts": {
    // Updated scripts for TypeScript + Hono
    "dev": "tsx watch src/server.ts", // Using tsx for faster TS execution in dev
    "build": "tsc",
    "start": "node dist/server.js", // Runs the compiled server entrypoint
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "prd": "pm2 start ecosystem.config.js --env production" // Keep PM2 option for non-Vercel prod
    // "test": "jest" // if tests are added
  },
  "author": "imsyy (Refactored by AI with Hono)",
  "license": "MIT",
  "dependencies": {
    // Hono Core & Node Adapter
    "hono": "^4.4.7", // Use latest stable Hono v4+
    "@hono/node-server": "^1.11.1", // Adapter for running Hono on Node.js

    // Hono Middleware & Validators
    "@hono/zod-validator": "^0.2.2", // Zod integration
    "zod": "^3.23.8", // Peer dependency for zod-validator
    "@hono/logger": "^1.0.0", // Optional: Hono's logger middleware
    "@hono/secure-headers": "^1.0.0", // Security headers
    "@hono/serve-static": "^1.0.0", // Serving static files

    // General Dependencies (kept/added)
    "@unblockneteasemusic/server": "0.29.0", // Pin version explicitly (check latest stable)
    "dotenv": "^16.4.5",
    "joi": "^17.13.1", // Keep Joi for config validation, or switch fully to Zod
    "pino": "^9.1.0", // Keep Pino for logging
    "uuid": "^9.0.1"

    // Removed Koa dependencies: koa, koa-router, koa-views, koa-static, koa-bodyparser, @koa/cors, koa-helmet, koa2-cors
    // Removed potentially unused: axios, python
  },
  "devDependencies": {
    // Types
    "@types/joi": "^17.2.3", // If keeping Joi
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.8",
    // No specific @types/hono needed as Hono is written in TS

    // Linting, Formatting, Building, Dev Server
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "tsx": "^4.11.0", // TS execution for dev, replaces ts-node/nodemon combo
    "typescript": "^5.4.5"
  }
}
