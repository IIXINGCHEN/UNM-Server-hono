# .env.example - Environment variables for unm-server-hono

# --- Core Settings ---
# Node environment (development, production, test)
NODE_ENV=development
# Port the application will listen on (if running via Node.js server)
PORT=5678
# Log level (fatal, error, warn, info, debug, trace, silent)
LOG_LEVEL=debug

# --- CORS ---
# Comma-separated list of allowed origins for CORS requests
# Example for local dev: ALLOWED_DOMAINS=http://localhost:3000,http://127.0.0.1:3000
# Example for production: ALLOWED_DOMAINS=https://yourfrontend.com,https://yourotherdomain.com
# Use '*' to allow all origins (less secure, generally not recommended for production APIs)
ALLOWED_DOMAINS=http://localhost:3000

# --- Proxy ---
# Optional: URL of the proxy server used for certain music sources (e.g., Kuwo)
# Example: PROXY_URL=https://vcproxy.091017.xyz/
PROXY_URL=

# --- UnblockNeteaseMusic Specific Settings (@unblockneteasemusic/server library) ---
# Enable FLAC quality sources if available
ENABLE_FLAC=true
# When FLAC is enabled, select the source with the highest bitrate
SELECT_MAX_BR=true
# Match sources strictly in the order provided (if supported by library version)
FOLLOW_SOURCE_ORDER=true

# --- Credentials (Optional - Leave empty if not used or set directly in production environment) ---
# Netease Cloud Music Cookie (e.g., MUSIC_U=...)
NETEASE_COOKIE=
# JOOX Cookie (e.g., wmid=...; session_key=...)
JOOX_COOKIE=
# Migu Cookie (e.g., aversionid=...)
MIGU_COOKIE=
# QQ Music Cookie (e.g., uin=...; qm_keyst=...)
QQ_COOKIE=
# YouTube Data API Key (if using YouTube source)
YOUTUBE_KEY=

# --- External APIs ---
# URL for the GDStudio Music API (or similar)
API_GDSTUDIO_URL=https://music-api.gdstudio.xyz/api.php

# --- Rate Limiting (Optional - sensible defaults are used if not set) ---
# Time window in milliseconds for rate limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
# Maximum number of requests allowed per window per user (IP)
RATE_LIMIT_MAX_REQUESTS=100
# Rate limiter store ('memory', 'redis', etc. - 'memory' not suitable for production clusters)
# For Redis, set RATE_LIMIT_REDIS_URL below
RATE_LIMIT_STORE=memory
# Optional: Redis connection URL if RATE_LIMIT_STORE is 'redis'
# RATE_LIMIT_REDIS_URL=redis://localhost:6379
